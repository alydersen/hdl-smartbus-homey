{
  "id": "com.github.alydersen.hdl-smartbus-homey",
  "version": "0.4.4",
  "compatibility": ">=5.0.0",
  "sdk": 3,
  "name": {
    "en": "HDL SmartBus"
  },
  "description": {
    "en": "HDL SmartBus support for Homey"
  },
  "tags": {
    "en": [
      "smart-bus",
      "buspro",
      "hdl"
    ]
  },
  "category": [
    "lights"
  ],
  "brandColor": "#7d4098",
  "homeyCommunityTopicId": 26575,
  "permissions": [],
  "images": {
    "large": "/assets/images/large.png",
    "small": "/assets/images/small.png"
  },
  "author": {
    "name": "Andreas Lydersen",
    "email": "andreas.lydersen@gmail.com"
  },
  "contributors": {
    "developers": [
      {
        "name": "Maximilian Brosnahan"
      },
      {
        "name": "Robert Kurti"
      }
    ]
  },
  "contributing": {
    "donate": {
      "paypal": {
        "username": "alydersen"
      }
    }
  },
  "source": "https://github.com/alydersen/hdl-smartbus-homey",
  "drivers": [
    {
      "id": "dimmer",
      "name": {
        "en": "Dimmer"
      },
      "class": "light",
      "capabilities": [
        "dim",
        "onoff"
      ],
      "icon": "/drivers/dimmer/assets/icon.svg",
      "images": {
        "large": "/drivers/dimmer/assets/images/large.png",
        "small": "/drivers/dimmer/assets/images/small.png"
      },
      "pair": [
        {
          "id": "list_devices",
          "template": "list_devices",
          "navigation": {
            "next": "add_devices"
          }
        },
        {
          "id": "add_devices",
          "template": "add_devices"
        }
      ]
    },
    {
      "id": "multisensor",
      "name": {
        "en": "multisensor"
      },
      "class": "sensor",
      "capabilities": [
        "alarm_motion",
        "measure_temperature",
        "measure_luminance"
      ],
      "images": {
        "large": "/drivers/multisensor/assets/images/large.png",
        "small": "/drivers/multisensor/assets/images/small.png"
      },
      "pair": [
        {
          "id": "list_devices",
          "template": "list_devices",
          "navigation": {
            "next": "add_devices"
          }
        },
        {
          "id": "add_devices",
          "template": "add_devices"
        }
      ]
    },
    {
      "id": "relay",
      "name": {
        "en": "Relay"
      },
      "class": "socket",
      "capabilities": [
        "onoff"
      ],
      "icon": "/drivers/relay/assets/icon.svg",
      "images": {
        "large": "/drivers/relay/assets/images/large.png",
        "small": "/drivers/relay/assets/images/small.png"
      },
      "pair": [
        {
          "id": "list_devices",
          "template": "list_devices",
          "navigation": {
            "next": "add_devices"
          }
        },
        {
          "id": "add_devices",
          "template": "add_devices"
        }
      ]
    },
    {
      "id": "tempsensor",
      "name": {
        "en": "Temperature Sensor"
      },
      "class": "sensor",
      "capabilities": [
        "measure_temperature"
      ],
      "icon": "/drivers/tempsensor/assets/icon.svg",
      "images": {
        "large": "/drivers/tempsensor/assets/images/large.png",
        "small": "/drivers/tempsensor/assets/images/small.png"
      },
      "pair": [
        {
          "id": "list_devices",
          "template": "list_devices",
          "navigation": {
            "next": "add_devices"
          }
        },
        {
          "id": "add_devices",
          "template": "add_devices"
        }
      ]
    },
    {
      "id": "universal-switch",
      "name": {
        "en": "Universal Switch"
      },
      "class": "other",
      "capabilities": [
        "onoff"
      ],
      "icon": "/drivers/universal-switch/assets/icon.svg",
      "images": {
        "large": "/drivers/universal-switch/assets/images/large.png",
        "small": "/drivers/universal-switch/assets/images/small.png"
      },
      "pair": [
        {
          "id": "list_devices",
          "template": "list_devices",
          "navigation": {
            "next": "add_devices"
          },
          "options": {
            "singular": true
          }
        },
        {
          "id": "add_devices",
          "template": "add_devices"
        }
      ]
    }
  ]
}